<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismBug.Login"
             Title="Login">
    <VerticalStackLayout
     Spacing="25"
     Padding="30,0"
     VerticalOptions="Center">

      
        <Label
         Text="Login"
         FontSize="18"
         HorizontalOptions="Center" />

        <Button
         Text="Login"
         Clicked="OnLogin"
         HorizontalOptions="Center" />

        <Button
            Text="Settings"
         Clicked="OnSettings"
         HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>